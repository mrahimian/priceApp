<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose">

    <Button
        android:id="@+id/adminPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="ورود به پنل ادمین"
        android:textSize="17sp"
        android:background="@drawable/button"
        app:layout_constraintEnd_toEndOf="@+id/visitorPanel"
        app:layout_constraintStart_toStartOf="@+id/visitorPanel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/visitorPanel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="17sp"
        android:text="ورود به پنل بازاریاب"
        android:background="@drawable/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminPanel" />
</androidx.constraintlayout.widget.ConstraintLayout>